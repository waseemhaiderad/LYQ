<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDateHistoryRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlackHintNewTheme"
        android:textSize="@dimen/_15ssp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewHistoryTypeHistoryRow"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateHistoryRow" />

    <TextView
        android:id="@+id/textViewHistoryTypeHistoryRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/colorBlackSettingItemsNewTheme"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHistoryTypeHistoryRow"
        app:layout_constraintStart_toEndOf="@+id/imageViewHistoryTypeHistoryRow"
        app:layout_constraintTop_toTopOf="@+id/imageViewHistoryTypeHistoryRow" />

    <TextView
        android:id="@+id/textViewTimeHistoryRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlackHintNewTheme"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHistoryTypeHistoryRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewHistoryTypeHistoryRow" />

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="@color/colorBlackHintNewTheme"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/textViewHistoryTypeHistoryRow"
        app:layout_constraintTop_toBottomOf="@+id/textViewHistoryTypeHistoryRow" />

</androidx.constraintlayout.widget.ConstraintLayout>