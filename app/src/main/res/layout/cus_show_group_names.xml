<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:background="@drawable/bg_white_border_btn"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp">

    <TextView
        android:id="@+id/textViewGroupNameForProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:singleLine="true"
        android:textColor="@color/colorBlackHintNewTheme"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSelectedProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewSelectedProfile"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:src="@drawable/green_tick"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGroupNameForProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewGroupNameForProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>