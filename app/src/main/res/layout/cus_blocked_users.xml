<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mImContactPic"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/mTvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Waqas Arshad"
        android:textColor="@color/colorBlackSettingNewTheme"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/mImContactPic"
        app:layout_constraintEnd_toStartOf="@+id/mBtnUnBlock"
        app:layout_constraintStart_toEndOf="@+id/mImContactPic"
        app:layout_constraintTop_toTopOf="@+id/mImContactPic" />


    <Button
        android:id="@+id/mBtnUnBlock"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/bg_rounded_invite"
        android:text="Un Block"
        android:textColor="@color/colorBlueNewTheme"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@+id/mImContactPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mImContactPic" />

</androidx.constraintlayout.widget.ConstraintLayout>
