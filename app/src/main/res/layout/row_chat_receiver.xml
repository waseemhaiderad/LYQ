                    android:layout_width="0dp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorBlackHintNewTheme"
                    app:layout_constraintEnd_toEndOf="parent"
