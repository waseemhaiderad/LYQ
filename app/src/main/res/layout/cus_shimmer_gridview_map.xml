            android:alpha="0.6"
            android:background="@drawable/bg_popup_shimmer"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCurrentLocation1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCurrentLocation1"
            app:layout_constraintTop_toTopOf="@+id/imageViewCurrentLocation1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewLinkedConnection1"
