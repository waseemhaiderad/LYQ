            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCurrentLocation1"
            android:alpha="0.6"
            android:background="@drawable/bg_circle_shimmer_new" />

        <TextView
            android:id="@+id/textViewConnectionSince1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="                           "
            android:alpha="0.6"
            android:background="@drawable/bg_popup_shimmer"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLinkedConnection1"
            app:layout_constraintStart_toEndOf="@+id/imageViewLinkedConnection1"
            app:layout_constraintTop_toTopOf="@+id/imageViewLinkedConnection1" />

        <TextView
            android:id="@+id/textViewConnectionDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:text="               "
            android:alpha="0.6"
            android:background="@drawable/bg_popup_shimmer"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLinkedConnection1"
            app:layout_constraintStart_toEndOf="@+id/textViewConnectionSince1"
            app:layout_constraintTop_toTopOf="@+id/imageViewLinkedConnection1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


