        <TextView
            android:id="@+id/textViewTouchId"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/touch_id"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/viewDividerThree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewVerificationDialogDes" />

        <View
            android:id="@+id/viewDividerThree"
            android:layout_width="1dp"
            android:layout_height="@dimen/_50sdp"
            android:background="#A4B8BD"
            app:layout_constraintEnd_toStartOf="@+id/textViewCancel"
            app:layout_constraintStart_toEndOf="@+id/textViewTouchId"
            app:layout_constraintTop_toBottomOf="@id/viewDivider" />


        <TextView
            android:id="@+id/textViewCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewDividerThree"
            app:layout_constraintTop_toBottomOf="@+id/textViewVerificationDialogDes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>